<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    android:backgroundTint="@color/teal_700"
    android:text="GO TO Quizzes"
    android:id="@+id/btnClk"
    android:onClick="clk20"

    tools:ignore="OnClick" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnClk"
        android:text="Run a program"
        android:id="@+id/codeBtn"
        android:onClick="clkcode"
        tools:ignore="OnClick" />
    <TextView
        android:id="@+id/Txtclk"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:height="60dp"
        android:layout_below="@id/codeBtn"
        android:background="@drawable/bg12"
        android:hint="mark scored"
        android:textColor="@color/cardview_dark_background"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:lines="4"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/bg15"
        android:scaleX="8"
        android:scaleY="8"
        android:visibility="gone" />


</RelativeLayout>